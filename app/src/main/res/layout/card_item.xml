<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="12dp"
    app:cardCornerRadius="12dp"
    app:cardUseCompatPadding="true"
    android:background="#5A4D6E"
    android:layout_margin="8dp"

    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/itemLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"

        android:background="#5A8882"
        android:orientation="vertical"
        android:padding="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Emergency Report"
            android:textColor="#E91E63"
            android:textAlignment="center"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="0dp"
            android:layout_margin="0dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-medium"
                android:padding="1dp"
                android:text="Name Of the Report: "
                android:textAlignment="viewStart"
                android:textColor="#0F0F10"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/reportName"
                android:layout_width="216dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:padding="1dp"
                android:text="Fire Accident At Factory"
                android:textAlignment="viewStart"
                android:textColor="#EFF0F4"
                android:textStyle="normal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="0dp"
            android:layout_margin="0dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-medium"
                android:padding="1dp"
                android:text="Incident Type: "
                android:textAlignment="viewStart"
                android:textColor="#0E0E0E"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/incidentType"
                android:layout_width="216dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:padding="1dp"
                android:text="Thunders"
                android:textAlignment="viewStart"
                android:textColor="#EAEBF1"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp"

            android:layout_margin="0dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:padding="1dp"
                    android:text="Impact: "
                    android:textAlignment="viewStart"
                    android:textColor="#161617"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/impact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:padding="1dp"
                    android:text="Low"

                    android:textAlignment="viewStart"
                    android:textColor="#EDEDEF"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textAlignment="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif-medium"
                        android:padding="1dp"
                        android:text="Effected People:"
                        android:textAlignment="viewEnd"
                        android:textColor="#101010"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/effected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:padding="1dp"
                        android:text="50"
                        android:textAlignment="viewStart"
                        android:textColor="#F1F2F8"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:padding="1dp"
                    android:text="createdBy: "
                    android:textAlignment="viewStart"
                    android:textColor="#0A0B0B"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/currentUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:padding="1dp"
                    android:text="Sai Nallapati"
                    android:textAlignment="viewStart"
                    android:textColor="#EFF0F4"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:padding="1dp"
                    android:text="Address: "
                    android:textAlignment="viewStart"
                    android:textColor="#0C0C0C"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:padding="1dp"
                    android:text="1215 W 16th Street,Maryville,MO,64468 "
                    android:textAlignment="viewStart"
                    android:textColor="#F3F4F8"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Info: "
            android:textColor="#131315"/>
        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:padding="3dp"
            android:lines="5"
            android:text="Fire safety on construction sites has been rarely studied because fire accidents have a lower occurrence compared to construction’s “Fatal Four”. Despite the lower occurrence, construction fire accidents tend to have a larger severity of impact"
            android:textAlignment="viewStart"
            android:textColor="#F6F6FA"
            android:textStyle="normal" />

        <!--            android:textAlignment="viewEnd"-->
        android:textColor="@color/black" />

    </LinearLayout>

</androidx.cardview.widget.CardView>